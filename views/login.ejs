<%- include("partials/header.ejs") %>
    <title>Inventario</title>
    <link rel="stylesheet" href="css/login-register.css">
    </head>

    <body>
        <div class="container">
            <div class="forms-container">

                <div class="login" id="login-container" hidden="">
                    <div class="login-form">
                        <div class="texts">
                            <h1>Inciar sesión</h1>
                            <p>Inicia sesión para acceder a tu inventario</p>
                        </div>
                        <form action="/login" method="post" class="login-form__inputs">
                            <div>
                                <label for="username">Nombre de usuario</label>
                                <input type="text" name="username" id="username" placeholder="Casa de Santi"
                                    autocomplete="off" autofocus>
                            </div>
                            <div class="">
                                <label for="password">Contraseña</label>
                                <input type="password" name="password" id="password" placeholder="Tu contraseña segura">
                            </div>

                            <button type="submit">
                                <span>
                                    Iniciar sesión
                                </span>
                            </button>
                        </form>
                        <p>¿Sin ninguna cuenta? <a href="#" class="changeToRegister"> Registrate haciendo click acá</a>
                        </p>
                    </div>
                    <div class="login-img"></div>
                </div>

                <div class="register" id="register-container">
                    <div class="register-img"></div>
                    <div class="register-form">
                        <div class="texts">
                            <h1>Registrarse</h1>
                            <p>Crea una cuenta, es gratis!</p>
                        </div>
                        <form action="/register" method="post" class="register-form__inputs">
                            <div class="register-form__section">
                                <label for="usernameRegister">Nombre de usuario</label>
                                <input type="text" name="username" id="usernameRegister" placeholder="Casa de Santi" autocomplete="off" autofocus>
                            </div>

                            <div class="register-form__section">
                                <label for="passwordRegister">Contraseña</label>
                                <input type="password" name="password" id="passwordRegister" placeholder="Tu contraseña segura">
                            </div>

                            <button type="submit">
                                <span>
                                    Iniciar sesión
                                </span>
                            </button>
                        </form>
                        <p>¿Ya tenés cuenta? <a href="#" class="changeToLogin">iniciá sesión haciendo click acá</a></p>
                    </div>
                </div>

            </div>
        </div>
        <script src="scripts/login_register.js"></script>
    </body>

    </html>