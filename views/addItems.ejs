    <link rel="stylesheet" href="css/addItems.css">
    </head>

    <body>
        <script src="/node_modules/html5-qrcode/html5-qrcode.min.js"></script>
        <!-- Aside: -->
        <aside class="aside-panel" id="aside-panel">
            <div class="aside-panel__container">
                <div class="aside-panel__user">
                    <i class="fa-solid fa-user"></i>
                    <p>
                        <%=username%>
                    </p>
                </div>
                <div class="aside-panel__links">
                    <button onmouseover="addHoverClassToElement(dashboardLink, 'active')"
                        class="aside-panel__link aside-panel__links__dashboard">
                        <a href="/dashboard">
                            <i class="fa-solid fa-house"></i>
                            <p>Dashboard</p>
                        </a>
                    </button>
                    <button onmouseover="addHoverClassToElement(inventoryLink, 'active')"
                        class="aside-panel__link aside-panel__links__inventory">
                        <a href="/inventario">
                            <i class="fa-solid fa-list"></i>
                            <p>Inventario</p>
                        </a>
                    </button>
                    <button onmouseover="addHoverClassToElement(addItemLink, 'active')"
                        class="aside-panel__link aside-panel__links__addItem">
                        <a href="addItem">
                            <i class="fa-solid fa-plus"></i>
                            <p>A침adir producto</p>
                        </a>
                    </button>
                    <button onmouseover="addHoverClassToElement(editItemLink, 'active')"
                        class="aside-panel__link aside-panel__links__editItem">
                        <a href="/editItemByQR">
                            <i class="fa-regular fa-pen-to-square"></i>
                            <p>Editar producto por QR</p>
                        </a>
                    </button>
                    <button onmouseover="addHoverClassToElement(makePurchasesLink, 'active')"
                        class="aside-panel__link aside-panel__links__makePurchases">
                        <a href="/makePurchases">
                            <i class="fa-solid fa-bag-shopping"></i>
                            <p>Lista de compras</p>
                        </a>
                    </button>
                    <button class="aside-panel__link aside-panel__links__purchasesArrived active">
                        <a href="/addItems">
                            <i class="fa-solid fa-truck"></i>
                            <p>Llegaron las compras</p>
                        </a>
                    </button>
                    <form onmouseover="addHoverClassToElement(logOutLink, 'active')" action="/logout" method="post"
                        class="aside-panel__link aside-panel__links__logOut">
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <button type="submit">Cerrar sesi칩n</button>
                    </form>

                </div>
            </div>
        </aside>

