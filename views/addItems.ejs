        <div class="content">
            <h1 class="title">Llegaron las compras</h1>
            <div class="inputs-section section">
                
                <div class="changeQuantityForm" id="changeQuantityForm">
                    <div class="">
                        <label for="newItemQuantity">Nueva cantidad del producto</label>
                        <input type="number" name="newItemQuantity" id="newItemQuantity" value="">
                    </div>
                    <button type="button" id="nextProduct">Siguiente <i class="fa-solid fa-arrow-right"></i></button>
                    <button type="submit" id="finishScanning">Listo, ya escanee todos los productos</button>
                </div>
                
                <div class="qr-reader" id="reader" style="width: 50%;"></div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <script src="scripts/shoppingArrived.js"></script>
        <script src="scripts/aside.js"></script>
