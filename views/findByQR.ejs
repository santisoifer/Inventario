<%- include("partials/header.ejs") %>
    <title>Buscar producto por QR</title>
    <link rel="stylesheet" href="css/addProduct.css">
    </head>

    <body>
        <script src="/node_modules/html5-qrcode/html5-qrcode.min.js"></script>
        <!-- Aside: -->
        <aside class="aside-panel">
            <div class="aside-panel__container">
                <div class="aside-panel__user">
                    <i class="fa-solid fa-user"></i>
                    <p>
                        <%=username%>
                    </p>
                </div>
                <div class="aside-panel__links">
                    <button onmouseover="addHoverClassToElement(dashboardLink, 'active')"
                        class="aside-panel__link aside-panel__links__dashboard">
                        <a href="/dashboard">
                            <i class="fa-solid fa-house"></i>
                            <p>Dashboard</p>
                        </a>
                    </button>
                    <button onmouseover="addHoverClassToElement(inventoryLink, 'active')"
                        class="aside-panel__link aside-panel__links__inventory">
                        <a href="/inventario">
                            <i class="fa-solid fa-list"></i>
                            <p>Inventario</p>
                        </a>
                    </button>
                    <button onmouseover="addHoverClassToElement(addItemLink, 'active')"
                        class="aside-panel__link aside-panel__links__addItem">
                        <a href="addItem">
                            <i class="fa-solid fa-plus"></i>
                            <p>Añadir producto</p>
                        </a>
                    </button>
                    <button class="aside-panel__link aside-panel__links__editItem active">
                        <a href="/editItemByQR">
                            <i class="fa-regular fa-pen-to-square"></i>
                            <p>Editar producto por QR</p>
                        </a>
                    </button>
                    <button onmouseover="addHoverClassToElement(makePurchasesLink, 'active')"
                        class="aside-panel__link aside-panel__links__makePurchases">
                        <a href="/makePurchases">
                            <i class="fa-solid fa-bag-shopping"></i>
                            <p>Lista de compras</p>
                        </a>
                    </button>
                    <button onmouseover="addHoverClassToElement(purchasesArrivedLink, 'active')"
                        class="aside-panel__link aside-panel__links__purchasesArrived">
                        <a href="/addItems">
                            <i class="fa-solid fa-truck"></i>
                            <p>Llegaron las compras</p>
                        </a>
                    </button>
                    <form onmouseover="addHoverClassToElement(logOutLink, 'active')" action="/logout" method="post"
                        class="aside-panel__link aside-panel__links__logOut">
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <button type="submit">Cerrar sesión</button>
                    </form>

                </div>
            </div>
        </aside>

        <div class="content">
            <h1 class="title">Buscar producto por QR</h1>
            <div class="add-product-container section">
                <form action="/editItem" method="post" class="add-product__form">
                    <div class="add-product__input">
                        <label for="productName">Nombre del producto:</label>
                        <input type="text" name="productName" id="productName" disabled="true">
                    </div>
                    <div class="add-product__input">
                        <label for="productBrand">Nombre de la marca:</label>
                        <input type="text" name="productBrand" id="productBrand" disabled="true">
                    </div>
                    <div class="add-product__input">
                        <label for="productQuantity">Cantidad actual:</label>
                        <input type="number" name="productQuantity" id="productQuantity" disabled="true">
                    </div>
                    <div class="add-product__input">
                        <label for="productMinQuantity">Cantidad mínima (cantidad que siempre tiene que haber de este
                            producto):</label>
                        <input type="number" name="productMinQuantity" id="productMinQuantity" disabled="true">
                    </div>
                    <div class="add-product__input">
                        <label for="productImgURL">Url de la imagen del producto:</label>
                        <input type="text" name="productImgURL" id="productImgURL" disabled="true" />
                    </div>
                    <input type="hidden" name="productGTIN" id="productGTIN" value="">
                    <input type="hidden" name="productID" id="productID" value="">
                    <button class="submit-button" type="submit">Editar producto</button>
                </form>
                <div class="qr-reader" id="reader" style="width: 50%;"></div>
            </div>
        </div>

        <div class="modal displayMessage" id="msgBox" tabindex="-1" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Elemento no encontrado!</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p id="msgBox__text">Elemento no encontrado! <a href="/addItem"><button type="button">Agregar nuevo producto</button></a></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>

        <script src="scripts/findItemByQR.js"></script>
        <script src="scripts/aside.js"></script>
    </body>

    </html>